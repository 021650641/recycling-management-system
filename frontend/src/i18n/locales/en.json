  "help": {
    "title": "User Guide",
    "subtitle": "Learn how to use CIVICycle - Recycling Management System",
    "gettingStarted": "Getting Started",
    "gettingStartedDesc": "CIVICycle is a comprehensive recycling management system designed to help cooperatives track materials from collection through sale. It handles vendor management, material pricing, inventory tracking, sales, and detailed reporting.",
    "dashboard": {
      "title": "Dashboard",
      "desc": "The Dashboard provides a real-time overview of your operations including total purchases, sales, current stock levels, and pending payments. Quick action buttons let you jump to common tasks. The Recent Transactions section shows the latest activity, and Low Stock Alerts highlight materials that need restocking."
    },
    "transactions": {
      "title": "Transactions",
      "desc": "Record material purchases from waste pickers (vendors). Each transaction captures the vendor, material type, weight, quality grade, price, and payment status. You can optionally track the source origin (apartment complex and unit). Prices auto-fill from the daily price settings. Use filters to search by source, material, location, or payment status."
    },
    "inventory": {
      "title": "Inventory",
      "desc": "View current stock levels across all locations and material types. The inventory updates automatically when transactions are recorded or sales are made. Filter by location to see site-specific stock. The chart shows stock distribution by material category. Low stock items are highlighted for attention."
    },
    "reports": {
      "title": "Reports & Analytics",
      "desc": "Generate comprehensive reports with customizable date ranges. Available report types include: Overview (summary statistics and trends), Purchases (by vendor, material, or detailed), Sales (by client, material, or detailed), and Analysis (aggregate data by vendor, source, unit, material, location, or client). Export reports as PDF, CSV, or Excel, or email them directly."
    },
    "vendors": {
      "title": "Vendors (Waste Pickers)",
      "desc": "Manage the waste pickers who supply recyclable materials. Store their personal information, ID numbers, contact details, and payment preferences (cash, bank transfer, or mobile money). Track affiliated vs independent waste pickers."
    },
    "clients": {
      "title": "Clients",
      "desc": "Manage the companies and individuals who buy your processed recyclable materials. Record contact information, addresses, and payment terms for each client."
    },
    "sources": {
      "title": "Sources (Apartment Complexes)",
      "desc": "Track the origin of recyclable materials by managing apartment complexes and their individual units. Each source can have multiple units with resident information. This enables detailed traceability from collection point to final sale."
    },
    "sales": {
      "title": "Sales",
      "desc": "Record sales of recyclable materials to clients. Each sale captures the client, material, weight, price, payment status, and delivery status. Track outstanding payments and pending deliveries."
    },
    "traceability": {
      "title": "Traceability",
      "desc": "Track the complete lifecycle of materials from source to buyer. Filter by apartment complex, specific unit, waste picker, material type, and date range. View summaries grouped by source and material, with detailed transaction listings."
    },
    "pricing": {
      "title": "Daily Pricing",
      "desc": "Set purchase and sale prices for each material. Use the 'Set Daily Prices' button to update all materials at once - it pre-populates with the latest available prices. Prices can be set for a full day or for specific time windows (e.g., morning vs afternoon rates). View historical prices by checking 'Show expired prices' and filtering by date."
    },
    "admin": {
      "title": "Admin Panel",
      "desc": "Manage system configuration including materials (types and units), locations (recycling stations), pricing, email settings (SMTP for sending reports), and display settings (date/time formats). Only accessible to Admin and Manager roles."
    },
    "users": {
      "title": "User Management",
      "desc": "Manage system users and their access levels. Available roles: Admin (full access), Manager (most features except user management), Operator (day-to-day operations), and Viewer (read-only access). Only accessible to Admin users."
    },
    "offlineMode": {
      "title": "Offline Mode",
      "desc": "CIVICycle works offline as a Progressive Web App (PWA). Transactions created while offline are saved locally and automatically synced when your connection is restored. The status indicator in the header shows your current connection status."
    },
