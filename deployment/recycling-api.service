[Unit]
Description=Recycling Management System - Backend API
Documentation=https://github.com/021650641/recycling-management-system
After=network.target postgresql.service
Requires=postgresql.service

[Service]
Type=simple
User=deploy
Group=deploy
WorkingDirectory=/var/www/recycling/backend
ExecStart=/usr/bin/node dist/server.js
Restart=on-failure
RestartSec=5
StartLimitBurst=10
StartLimitIntervalSec=120

# Environment
Environment=NODE_ENV=production
EnvironmentFile=/var/www/recycling/backend/.env

# Process management
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=10

# Security hardening
NoNewPrivileges=true
ProtectSystem=full
ProtectHome=true
PrivateTmp=true

# Resource limits
MemoryMax=512M
TasksMax=256

# Logging (use journald)
StandardOutput=journal
StandardError=journal
SyslogIdentifier=recycling-api

[Install]
WantedBy=multi-user.target
